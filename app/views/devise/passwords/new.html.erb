<div class="devise-background"></div>
<div class="password-forgot-wrapper">
  <h2 class="devise-title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "forgot-email" %>
      <%= f.email_field :email, autofocus: true, class: "forgot-email-area"  %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions",:class => "button-reset"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
