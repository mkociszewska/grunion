<div class="devise-background"></div>
<div class="signup-wrapper">
  <h2 class="devise-title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="signup-email-wrap">
      <%= f.label :email , class: "login-email"%>
      <%= f.email_field :email, autofocus: true , class: "login-email-area"%>
    </div>

    <div class="signup-password-wrap">
      <%= f.label :password, class: "login-password" %>
      <% if @minimum_password_length %>
      <p class="signup-password-alert">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "login-password-area"  %>
    </div>

    <div class="signup-password-wrap-confirm">
      <%= f.label :password_confirmation, class: "signup-password-confirm"  %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "signup-password-confirm-area"  %>
    </div>

    <div class="signup-submit">
      <%= f.submit "Sign up",:class => "button-sign-up"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>