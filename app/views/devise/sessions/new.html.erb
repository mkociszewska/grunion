<div class="devise-background"></div>
<div class="login-wrapper">
  <h2 class="devise-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-email-wrap">
      <%= f.label :email , class: "login-email"%>
      <%= f.email_field :email, autofocus: true, class: "login-email-area" %>
    </div>

    <div class="login-password-wrap">
      <%= f.label :password, class: "login-password" %>
      <%= f.password_field :password, autocomplete: "off", class: "login-password-area" %>
    </div>

    <div>
      <%= f.submit "Log in" ,:class => "button-login" %>
    </div>

      <% if devise_mapping.rememberable? -%>
          <div class="login-remember-wrap">
            <%= f.check_box :remember_me, :class => "remember-checkbox" %>
            <%= f.label :remember_me,  :class => "remember-label"%>
          </div>
      <% end -%>
  <% end %>

  <%= render "devise/shared/links" %>
</div>