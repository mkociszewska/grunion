<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="form__title">
      <%= f.label :title, class: "form__title__label" %>
      <%= f.text_field :title, class: "form__title__textarea" %>
    </div> 

    <div class="form__text">
      <%= f.label :text, class: "form__text__label" %>
      <%= f.text_area :text, class: "form__text__textarea" %>
    </div>

    <%= f.submit 'save', :class => "button__submit" %>

  </div> 

<% end %>
